{
    "name": "Casterke/simplepay-laravel",
    "description": "OTP SimplePay integration for Laravel applications.",
    "keywords": [
        "Casterke",
        "laravel",
        "simplepay",
        "otp",
        "simplepay-laravel"
    ],
    "homepage": "https://github.com/Casterke/simplepay-laravel",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Joel Lupfer",
            "email": "joel@lupfer.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Casterke\\SimplePayLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Casterke\\SimplePayLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Casterke\\SimplePayLaravel\\SimplepayLaravelServiceProvider"
            ],
            "aliases": {
                "SimplePayLaravel": "Casterke\\SimplePayLaravel\\SimplepayLaravelFacade"
            }
        }
    }
}
